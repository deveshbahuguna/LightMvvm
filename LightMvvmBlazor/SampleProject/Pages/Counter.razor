@page "/counter"
@using SampleProject.ViewModel
@inherits MvvmLightBlazorComponent.BlazorMvvmComponent
<PageTitle>Counter</PageTitle>


<h1>Counter</h1>

<p role="status">Current count: @Bind(counterVM, x=>x.Counter).ToString()</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private CounterViewModel counterVM;

    private void IncrementCount()
    {
        currentCount++;
    }

    public Counter()
    {
        counterVM = new CounterViewModel();
    }


}
