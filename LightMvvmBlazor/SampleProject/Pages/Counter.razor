@page "/counter"
@using MvvmLightCore.Binder
@using SampleProject.ViewModel
@using System.ComponentModel
@inherits MvvmLightBlazorComponent.BlazorMvvmComponent
<PageTitle>Counter</PageTitle>


<h1>Counter</h1>

<p role="status">Current count: @(Bind<CounterViewModel,int>(counterVM, x=>x.Counter))</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private CounterViewModel counterVM;

    private void IncrementCount()
    {
        this.counterVM.Counter++;
    }

    public Counter() : base(new MvvmLightCore.MvvmBinder(new BindingManager()))
    {
        counterVM = new CounterViewModel();
    }


}
